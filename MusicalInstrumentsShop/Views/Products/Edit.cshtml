@model MusicalInstrumentsShop.BusinessLogic.DTOs.ProductEditingDto

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="jumbotron update-product-jumbotron">
    <h4>Update Product</h4>
    <div class="col-md-4">
        <form asp-action="Edit" class="product-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row my-row">
                <div class="col-md-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row my-row">
                <div class="col-md-3">
                    <label asp-for="PhotoOption" class="control-label"></label>
                    <select asp-for="PhotoOption" asp-items="Html.GetEnumSelectList<MusicalInstrumentsShop.BusinessLogic.DTOs.PhotoOption>()"
                            class="form-control set-width-280">
                        <option selected>Please select</option>
                    </select>
                    <span asp-validation-for="PhotoOption" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="@Model.Photos" class="control-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file photo-input">
                            <input asp-for="@Model.Photos" multiple class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose photo</label>
                            <span asp-validation-for="@Model.Photos" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group margin-left-296">
                <br />
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control width-66" rows="3" cols="50"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-3 edit-product-btn">
                <input type="submit" value="Save" class="btn btn-dark" id="form-btn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/addProduct.js"></script>
}
