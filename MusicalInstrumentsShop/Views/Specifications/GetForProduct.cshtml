@model IEnumerable<MusicalInstrumentsShop.BusinessLogic.DTOs.SpecificationDto>

@{
    ViewData["Title"] = "Product Specifications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row add-margin-top-100">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h4>Specifications</h4>
                @foreach (var item in Model)
                {
                    <b> @Html.DisplayFor(model => item.Key): </b>
                    @Html.DisplayFor(model => item.Value)
                    <a style="margin-left: 60px;" asp-action="Delete" asp-route-id="@item.Id">Delete</a><br />
                }
            </div>
            <div>
                <a asp-action="Index" asp-controller="Products">Go back to products</a>
            </div>
        </div>
    </div>
</div>
