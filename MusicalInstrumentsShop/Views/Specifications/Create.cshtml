@model MusicalInstrumentsShop.BusinessLogic.DTOs.SpecificationDto

@{
    ViewData["Title"] = "Add Specification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="jumbotron specification-jumbotron">
    <h4>Add Specification</h4>
    <div class="col-md-4">
        <form asp-action="Create" class="specification-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-dark" id="form-btn" />
            </div>
            <div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


