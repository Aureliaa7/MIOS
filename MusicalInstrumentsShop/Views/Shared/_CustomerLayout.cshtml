<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpg" href="~/images/mios-owl.png" />
    <title>@ViewData["Title"] - MIOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/adminLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
</head>

<body class="bg">
    <div class="wrapper">
        <!--header menu start-->
        <div class="header">
            <div class="header-menu">
                <div class="title">
                    <center class="profile">
                        <img src="~/images/mios-owl.png" />
                    </center>
                </div>
                <a class="navbar-brand add-margin-left" style="color:white;" asp-controller="Products" asp-action="Browse">Musical Instruments Online Shop</a><br />
                <a class="navbar-brand" style="color:white;" asp-area="" asp-controller="Products" asp-action="Browse">Browse products</a>
                <a class="navbar-brand add-margin-left" style="color:white;" asp-controller="" asp-action="" role="button"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> My orders</a>
                <div class="dropdown-menu dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-controller="Orders" asp-action="Index">All</a>
                    <a class="dropdown-item" asp-controller="Orders" asp-action="Canceled">Canceled</a>
                    <a class="dropdown-item" asp-controller="Orders" asp-action="InProgress">In progress</a>
                </div>
                <ul>
                    <li>
                        <a name="no-text-decoration" class="nav-link wishlist-link" asp-controller="WishlistProducts" asp-action="Index">
                            <i class="fa fa-heart"></i>
                        </a>
                    </li>
                    <li>
                        <a name="no-text-decoration" class="nav-link white-link" asp-controller="CartProducts" asp-action="Index">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </li>
                    <li>
                        <a name="no-text-decoration" class="nav-link account-btn" asp-controller="" asp-action="" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user user-customer"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Edit">Edit account</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer fixed-bottom text-white-50">
        &copy; 2021 - Musical Instruments Online Shop
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
