<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/jpg" href="~/images/mios-owl.png" />
    <title>@ViewData["Title"] - MIOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/adminLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
</head>

<body class="bg">
    <!--wrapper start-->
    <div class="wrapper">
        <!--header menu start-->
        <div class="header">
            <div class="header-menu">
                <div class="title">
                    <center class="profile">
                        <img src="~/images/mios-owl.png" />
                    </center>
                </div>
                <ul>
                    <li>
                        <a class="nav-link account-btn" asp-area="" asp-controller="" asp-action="" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Edit">Edit account</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!--header menu end-->
        <!--sidebar start-->
        <div class="sidebar">
            <div class="sidebar-menu">
                <ul>
                    <li class="item">
                        <a asp-area="" asp-controller="Dashboards" asp-action="Admin" class="menu-btn">
                            <i class="fas fa-desktop"></i>Dashboard
                        </a>
                    </li>

                    <li class="item" id="categories">
                        <a href="#categories" class="menu-btn">
                            <i class="fas fa-list-alt"></i><span>Categories <i class="fas fa-chevron-down drop-down"></i></span>
                        </a>
                        <div class="sub-menu">
                            <a asp-area="" asp-controller="Categories" asp-action="Create">Add</a>
                            <a asp-area="" asp-controller="Categories" asp-action="Index">View</a>
                        </div>
                    </li>

                    <li class="item" id="suppliers">
                        <a href="#suppliers" class="menu-btn">
                            <i class="fas fa-users"></i><span>Suppliers <i class="fas fa-chevron-down drop-down"></i></span>
                        </a>
                        <div class="sub-menu">
                            <a asp-area="" asp-controller="Suppliers" asp-action="Create">Add</a>
                            <a asp-area="" asp-controller="Suppliers" asp-action="Index">View</a>
                        </div>
                    </li>

                    <li class="item" id="products">
                        <a href="#products" class="menu-btn">
                            <i class="fa fa-music"></i><span>Products <i class="fas fa-chevron-down drop-down"></i></span>
                        </a>
                        <div class="sub-menu">
                            <a asp-area="" asp-controller="Products" asp-action="Create">Add new product</a>
                            <a asp-area="" asp-controller="Products" asp-action="Index">View all products</a>
                            <a asp-area="" asp-controller="Stocks" asp-action="Edit">Update stock</a>
                        </div>
                    </li>

                    <li class="item" id="deliveryMethods">
                        <a href="#deliveryMethods" class="menu-btn">
                            <i class="fa fa-truck"></i><span>Delivery <i class="fas fa-chevron-down drop-down"></i></span>
                        </a>
                        <div class="sub-menu">
                            <a asp-area="" asp-controller="DeliveryMethods" asp-action="Create">Add</a>
                            <a asp-area="" asp-controller="DeliveryMethods" asp-action="Index">View</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!--sidebar end-->
        <div class="main-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <!--wrapper end-->

    <footer class="border-top footer fixed-bottom text-white-50">
        &copy; 2020 - Musical Instruments Online Shop
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
